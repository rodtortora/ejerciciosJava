package guia2ej5;

/**
 * Interfaz que deberá implementar todo aquel objeto del que queramos 
 * controlar su estado
 */

public interface IObservable {
	
	/**
	 * Método para añadir un objeto observador al objeto observable.
	 * @param observer objeto que implementa la interfaz IObserver.
	 */
	void addObserver(IObserver observer);
	
	/**
	 * Metodo para eliminar un objeto observador al objeto observable.
	 * @param observer objeto que implementa la interfaz IObserver.
	 */
	void removeObserver(IObserver observer);

}
